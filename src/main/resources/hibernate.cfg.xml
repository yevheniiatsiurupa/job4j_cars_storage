<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5432/cars_storage</property>
        <property name="hibernate.connection.username">postgres</property>
        <property name="hibernate.connection.password">password</property>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL93Dialect</property>
        <property name="show_sql">true</property>

        <mapping class="ru.job4j.cars.models.Car"/>
        <mapping class="ru.job4j.cars.models.CarBody"/>
        <mapping class="ru.job4j.cars.models.Engine"/>
        <mapping class="ru.job4j.cars.models.Transmission"/>
        <mapping class="ru.job4j.cars.models.CarMake"/>
        <mapping class="ru.job4j.cars.models.CarModel"/>
        <mapping class="ru.job4j.cars.models.Account"/>
        <mapping class="ru.job4j.cars.models.Application"/>
    </session-factory>
</hibernate-configuration>